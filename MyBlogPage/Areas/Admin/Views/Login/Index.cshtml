@model MyBlogPage.Areas.Admin.ViewModel.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Blog Admin Login Page</title>
    <!-- base:css -->
    <link rel="stylesheet" href="/Areas/Admin/Content/vendors/typicons/typicons.css">
    <link rel="stylesheet" href="/Areas/Admin/Content/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="/Areas/Admin/Content/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="/Areas/Admin/Content/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="/Areas/Admin/Content/images/logo-dark.svg" alt="logo">
                            </div>
                            @if (ViewData.ModelState.Count > 0)
                            {
                                <div class="alert alert-danger alert-dismissible">
                                    @Html.ValidationSummary(false,"")
                                </div>
                            }
                            <h4>Hello! let's get started</h4>
                            <h6 class="font-weight-light">Sign in to continue.</h6>
                            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control form-control-lg", placeholder = "Email" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(x => x.Password, new { @class = "form-control form-control-lg", placeholder = "Password" })
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN IN</button>
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            @Html.CheckBoxFor(x => x.RememberMe, new { @class = "form-check-input" })
                                            Keep me signed in
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- base:js -->
    <script src="/Areas/Admin/Content/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="/Areas/Admin/Content/js/off-canvas.js"></script>
    <script src="/Areas/Admin/Content/js/hoverable-collapse.js"></script>
    <script src="/Areas/Admin/Content/js/template.js"></script>
    <script src="/Areas/Admin/Content/js/settings.js"></script>
    <script src="/Areas/Admin/Content/js/todolist.js"></script>
    <!-- endinject -->
</body>

</html>

